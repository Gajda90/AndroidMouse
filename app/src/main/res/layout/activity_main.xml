<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 1. Touchpad zajmujący górne 80% ekranu -->
    <View
        android:id="@+id/touchpad_view"
        android:layout_width="320dp"
        android:layout_height="476dp"
        android:background="#E0E0E0"
        app:layout_constraintBottom_toTopOf="@+id/guideline_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <!-- - SEKCJA KONTROLNA (DOLNE 20% EKRANU) - -->

    <!-- Linia pomocnicza oddzielająca touchpad od reszty -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <!-- Linia pomocnicza oddzielająca status/połącz od przycisków myszy -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <!-- 2. POPRAWIONY WIDOK STATUSU (JUŻ NIE KONFLIKTUJE) -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical|start"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:text="Status: Rozłączono"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/guideline_top"
        app:layout_constraintBottom_toTopOf="@id/guideline_middle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_connect" />

    <!-- 3. Przycisk "Połącz" -->
    <Button
        android:id="@+id/btn_connect"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:text="Połącz"
        app:layout_constraintTop_toBottomOf="@id/guideline_top"
        app:layout_constraintBottom_toTopOf="@id/guideline_middle"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 4. Przycisk lewego kliknięcia -->
    <Button
        android:id="@+id/btn_left_click"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/left_click"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/guideline_middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_right_click" />

    <!-- 5. Przycisk prawego kliknięcia -->
    <Button
        android:id="@+id/btn_right_click"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/right_click"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/guideline_middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_left_click"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
